{{block "widget-stat" .}}
  <div class="stats shadow min-w-1/4">
    <div class="stat">
      <div class="stat-title">{{.Stat.Title}}</div>
      <div class="stat-value{{if .ValueClass}} {{.ValueClass}}{{end}}">{{.Stat.Value}}</div>
      <div class="stat-desc{{if .DescxriptionClass}} {{.DescriptionClass}}{{end}}">{{.Stat.Description}}</div>
    </div>
  </div>
{{end}}

{{block "widget-table" .}}
  <div class="overflow-x-auto">
    <table class="table table-xs">
      {{if gt (len .Table.Head) 0}}
        <thead>
          <tr>
            {{range $i, $v := .Table.Head}}
              <td>{{$v}}</td>
            {{end}}
          </tr>
        </thead>
      {{end}}
      <tbody>
        {{range $i, $v := .Table.Body}}
          <tr>
            {{range $j, $u := .}}
              <td>{{.}}</td>
            {{end}}
          </tr>
        {{end}}
      </body>
      {{if gt (len .Table.Foot) 0}}
        <tfoot>
          <tr>
            {{range $i, $v := .Table.Foot}}
              <td>{{$v}}</td>
            {{end}}
          </tr>
        </tfoot>
      {{end}}

    </table>
  </div>
{{end}}

{{block "widget-server-time" .}}
  <div class="stat">
    <div class="stat-title">Server time</div>
    <div class="stat-value"
         hx-get="/widget/server-time"
         hx-trigger="load delay:1m"
         hx-target="closest div.stat"
         hx-swap="outerHTML">{{.Now}}</div>
    <div class="stat-desc"></div>
  </div>
{{end}}
