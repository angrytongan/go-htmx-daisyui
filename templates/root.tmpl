{{block "root-page" .}}
  {{template "head" .}}
  {{template "nav" .}}

  <div hx-get="/widget/stat/pageviews"
       hx-trigger="load"
       hx-target="this"
       hx-swap="outerHTML">{{template "loader"}}</div>

  <div hx-get="/widget/stat/downloads"
       hx-trigger="load"
       hx-target="this"
       hx-swap="outerHTML">{{template "loader"}}</div>

  <div hx-get="/widget/table/employees"
       hx-trigger="load"
       hx-target="this"
       hx-swap="outerHTML">{{template "loader"}}</div>

  {{template "foot" .}}
{{end}}

{{define "loader"}}
  <span class="loading loading-spinner"></span>
{{end}}
